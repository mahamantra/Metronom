<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/buttonPlay"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="58dp"
        android:layout_marginBottom="75dp"
        android:text="Play"
        app:layout_constraintBottom_toTopOf="@+id/button100"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/button200"
        android:layout_width="136dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="108dp"
        android:onClick="play200"
        android:text="2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/button100"
        android:layout_width="136dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="108dp"
        android:onClick="play100"
        android:text="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/button150"
        android:layout_width="136dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="108dp"
        android:onClick="play150"
        android:text="1.5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/button200" />

    <Button
        android:id="@+id/buttonStop"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginEnd="65dp"
        android:layout_marginBottom="75dp"
        android:text="Stop"
        app:layout_constraintBottom_toTopOf="@+id/button200"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>